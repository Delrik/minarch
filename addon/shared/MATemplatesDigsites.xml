	<!-- Kalimdor Button -->
	<Button name="MinArchKalimdorButtonTemplate" virtual="true" >
		<Size x="32" y="32"/>
		<Anchors>
			<Anchor point="TOPLEFT" x="15" y="-20"/>
		</Anchors>
		<Scripts>
			<OnClick>
				MinArchGlobal:DimADIButtons();
				self:SetAlpha(1.0);
				MinArchGlobal:CreateDigSitesList(1);
				MinArchGlobal:CreateDigSitesList(1);
			</OnClick>
			<OnEnter>
				MinArchGlobal:ADIButtonTooltip(1);
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<NormalTexture file="Interface\Icons\Achievement_Zone_Kalimdor_01.blp">
			<Size x="32" y="32"/>

		</NormalTexture>
		<PushedTexture file="Interface\Icons\Achievement_Zone_Kalimdor_01.blp">
			<Size x="32" y="32"/>

		</PushedTexture>
		<HighlightTexture file="Interface\Icons\Achievement_Zone_Kalimdor_01.blp" alphaMode="ADD">
			<Size x="32" y="32"/>

		</HighlightTexture>
	</Button>

